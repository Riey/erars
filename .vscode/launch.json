    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'erars'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=erars",
                    "--package=erars"
                ],
                "filter": {
                    "name": "erars",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'erars' with eraYM",
            "cargo": {
                "args": [
                    "build",
                    "--bin=erars",
                    "--package=erars"
                ],
                "filter": {
                    "name": "erars",
                    "kind": "bin"
                }
            },
            "args": ["--use-input=inputs.ron", "../eraTHYMKR"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'erars'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=erars"
                ],
                "filter": {
                    "name": "parser_test",
                    "kind": "test"
                }
            },
            "args": ["--", "endif"],
            "cwd": "${workspaceFolder}"
        }
    ]
}